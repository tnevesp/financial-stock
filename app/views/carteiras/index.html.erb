                  <td><%= tipo_de_operacao_label(carteira.tipo_de_operacao) %></td>
                  
                  <td><%= carteira.empresa.ticker %></td>
                  <td><%= carteira.empresa.nome %></td>
                  <!-- <td><p class="text-right"><%= number_with_delimiter(carteira.quantidade, delimiter: ",") %></p></td>
                  
                  <td><p class="text-right"><%= number_to_currency_br carteira.stop %></p></td>
                  <td><p class="text-right"><%= number_to_currency_br carteira.alvo %></p></td>
                  
                  
                  <td><%= numero_para_porcentagem(carteira.risco) %></td>
                  <td><%= numero_para_porcentagem(carteira.retorno) %></td>
                  <td><p class="text-right"><%= number_to_currency_br carteira.entrada %></p></td>
